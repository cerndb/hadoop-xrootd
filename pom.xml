<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ch.cern.eos</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <artifactId>hadoop-xrootd</artifactId>
    <packaging>nar</packaging>
    <properties>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-common</artifactId>
            <version>2.7.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
        <dependency>
            <groupId>org.scijava</groupId>
            <artifactId>native-lib-loader</artifactId>
            <version>2.2.0</version>
        </dependency>
        <!-- TODO: Separate this into hadoop-xrootd and hadoop-xrootd-nar to be able to resolve dependency, or package as one JAR -->
        <!-- TODO: https://mvnrepository.com/artifact/org.apache.nifi/nifi-hadoop-libraries-nar/1.7.1-->
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <!-- Add JNI library -->
                <!-- TODO: Add profile for different architectures-->
                <!-- TODO: https://github.com/imagej/imagej-launcher/blob/master/pom.xml#L181-->
                <groupId>com.github.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <version>3.5.1</version>
                <extensions>true</extensions>
                <configuration>
                    <linker>
                        <sysLibs>
                            <sysLib>
                                <name>dl</name>
                            </sysLib>
                            <sysLib>
                                <name>XrdCl</name>
                            </sysLib>
                            <sysLib>
                                <name>XrdUtils</name>
                            </sysLib>
                        </sysLibs>
                    </linker>
                    <libraries>
                        <library>
                            <type>jni</type>
                            <narSystemPackage>ch.cern.eos</narSystemPackage>
                        </library>
                    </libraries>
                    <cpp>
                        <systemIncludePaths>
                            <systemIncludePath>/usr/include/xrootd</systemIncludePath>
                        </systemIncludePaths>
                    </cpp>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
